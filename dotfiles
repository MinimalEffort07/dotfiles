if ! [ -f ~/.config/nvim/init.vim_pre_dotfile_install ] 
then
    mv ~/.config/nvim/init.vim ~/.config/nvim/init.vim.pre_dotfile_install
fi 

if ! [ -f ~/.vimrc.vim_pre_dotfile_install ] 
then
    mv ~/.vimrc ~/.vimrc.pre_dotfile_install
fi

